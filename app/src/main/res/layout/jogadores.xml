<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Campo de entrada de texto -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutJogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/inputLayoutJogador">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputJogador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- BotÃ£o para adicionar o jogador -->
    <Button
        android:id="@+id/btnAddJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botaoAdicionarJogador"
        android:layout_marginTop="16dp" />

    <!-- Lista de jogadores -->
    <TextView
        android:id="@+id/txtJogadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jogadoresAdicionados"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
</LinearLayout>